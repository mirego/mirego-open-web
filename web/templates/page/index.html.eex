<section id="content">
  <%= Enum.map assigns[:repos], fn (repo)-> %>
    <a href=<%= repo.url %> class="repo repo--language-<%= repo.language %>" target="_blank">
      <div class="repo-header">
        <span class="repo-header-language"><%= repo.pretty_language %></span>
        <span class="repo-header-stars"><%= repo.stargazers_count %> â˜…</span>
        <span class="repo-name"><%= repo.name %></span>
      </div>
      <div class="repo-description"><%= repo.description %></div>
    </a>
  <% end %>
</section>
